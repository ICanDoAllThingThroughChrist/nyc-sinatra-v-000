  <form action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Figure's Name</h2>
  <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">
  <h3>Figure's Existing Landmarks</h3>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id%>" value="<%=landmark.id%>"
      <%='checked' if @figure.landmarks.include?(landmark) %>
      >
      <%=landmark.name%></input><br>
  <%end%>
  <h3>Figure's New Landmark</h3>
  <input type="text" name="landmark[name]" id="new_landmark">
  <h3>Figure's Existing Titles</h3>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id%>" value="<%=title.id%>"
      <%='checked' if @figure.titles.include?(title) %>
      >
      <%=title.name%></input><br>
  <%end%>
  <h3>Figure's New Title</h3>
  <input type="text" name="title[name]"><br>
  <input type="submit" value="Edit Figure">
  </form>
